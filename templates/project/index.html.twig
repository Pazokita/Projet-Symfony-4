{% extends 'front.html.twig' %}

{% block title %}Voir les derniers projets{% endblock %}

{% block content %}
    <main role="main" class="container">
        <div class="row">
            <div class="container mt-8">
                <div class="album py-5">
                    <div class="container">
                        <div class="row">
                            {% for project in projects %}
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <img class="img-fluid" src="{{ asset('img/'~project.photo)}}" alt="">
                                    <div class="card-body">
                                        <h4>{{project.nom}}</h4>
                                        <p class="card-text">{{project.description}}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a href="{{ path('project_show', {'id':project.id}) }}" class="btn btn-sm btn-outline-secondary" >Voir le projet</a>

                                            </div>
                                            <small class="text-muted">5 padawans</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock content %}
